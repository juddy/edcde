#ifdef USLArchitecture
/* work around likely optimizer problem */
context.o: context.c
	RemoveFile($@)
	ClearmakeOSName
	$(CC) -c $(CCOPTIONS) $(THREADS_CFLAGS) $(ALLDEFINES) $*.c
#endif

